PeopleNames
-----
do as server
  let getModTable := (select PeopleNames);
	let getTable1 := (select People);
	for rec in getModTable do
		let xMRec := first(getTable1[RiderID = rec.LinkID]);
		rec.(Person := xMRec)
	end
end
